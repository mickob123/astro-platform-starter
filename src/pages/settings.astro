          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ user_id: removingMemberId }),
      });

      if (!res.ok) {
        const err = await res.json().catch(() => ({ error: 'Failed' }));
        throw new Error(err.error || `Request failed (${res.status})`);
      }

      removeMemberModal.close();
      removingMemberId = null;
      showTeamFeedback('Team member removed.', 'success');
      await fetchTeamMembers();
    } catch (err: any) {
      showTeamFeedback(err.message || 'Failed to remove member', 'error');
    } finally {
      removeConfirmBtn.classList.remove('loading');
    }
  }

  // Team event listeners
  btnInviteMember.addEventListener('click', () => {
    inviteEmailInput.value = '';
    inviteRoleSelect.value = 'viewer';
    inviteError.classList.add('hidden');
    inviteModal.showModal();
  });
  inviteCancelBtn.addEventListener('click', () => inviteModal.close());
  inviteSendBtn.addEventListener('click', inviteMember);
  removeCancelBtn.addEventListener('click', () => {
    removingMemberId = null;
    removeMemberModal.close();
  });
  removeConfirmBtn.addEventListener('click', removeMember);

  // Lazy-load team members when tab is clicked
  tabTeam.addEventListener('click', () => {
    if (!teamLoaded) {
      teamLoaded = true;
      fetchTeamMembers();
    }
  });

  // ─── Initial Load ──────────────────────────────────────────────
  loadAccountInfo();
</script>

  // ─── Save Rule ──────────────────────────────────────────────────
  async function saveRule(): Promise<void> {
    const name = ruleNameInput.value.trim();
    if (!name) {
      ruleNameInput.classList.add('input-error');
      return;
    }
    ruleNameInput.classList.remove('input-error');

    const minAmount = ruleMinInput.value ? parseFloat(ruleMinInput.value) : null;
    const maxAmount = ruleMaxInput.value ? parseFloat(ruleMaxInput.value) : null;
    const requiredApprovals = parseInt(ruleApproversCountInput.value, 10) || 1;
    const approverEmails = ruleApproverEmailsInput.value
      .split(',')
      .map(e => e.trim())
      .filter(e => e.length > 0);

    const token = await getAuthToken();
    if (!token) {
      window.location.href = '/login';
      return;
    }

    const payload: Record<string, any> = {
      name,
      min_amount: minAmount,
      max_amount: maxAmount,
      required_approvals: requiredApprovals,
      approver_emails: approverEmails,
    };

    ruleSaveBtn.classList.add('loading');

    try {
      const method = editingRuleId ? 'PUT' : 'POST';
      const url = editingRuleId
        ? `${FUNCTIONS_URL}/admin-approval-rules?id=${encodeURIComponent(editingRuleId)}`
        : `${FUNCTIONS_URL}/admin-approval-rules`;

      if (editingRuleId) {
        payload.id = editingRuleId;
      }

      const res = await fetch(url, {
        method,
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload),
      });

      if (!res.ok) {
        const errData = await res.json().catch(() => ({}));
        throw new Error(errData.error || `Request failed with status ${res.status}`);
      }

      ruleModal.close();
      await fetchRules();
    } catch (err: any) {
      console.error('Failed to save rule:', err);
      alert(`Failed to save rule: ${err.message}`);
    } finally {
      ruleSaveBtn.classList.remove('loading');
    }
  }


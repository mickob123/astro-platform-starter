---
export const prerender = false;
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Settings">
  <!-- Back + Breadcrumb -->
  <div class="flex items-center gap-3 mb-4">
    <a href="/dashboard"
       class="btn btn-sm btn-ghost gap-1 no-underline">
      <svg xmlns="http://www.w3.org/2000/svg"
           class="h-4 w-4" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round"
              stroke-linejoin="round" stroke-width="2"
              d="M15 19l-7-7 7-7" />
      </svg>
      Back
    </a>
    <div class="text-sm breadcrumbs">
      <ul>
        <li>
          <a href="/dashboard"
             class="no-underline text-base-content/60
                    hover:text-base-content">
            Dashboard
          </a>
        </li>
        <li class="text-base-content font-medium">
          Settings
        </li>
      </ul>
    </div>
  </div>

  <!-- Page header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold">Settings</h1>
      <p class="text-sm opacity-50 mt-1">Manage your account, approval workflows, and preferences</p>
    </div>
  </div>

  <!-- Tabs -->
  <div class="tabs tabs-bordered mb-6">
    <a class="tab tab-active" id="tab-account">Account</a>
    <a class="tab admin-only" id="tab-approvals">Approval Rules</a>
    <a class="tab admin-only" id="tab-team">Team Members</a>
    <a class="tab admin-only" id="tab-notifications">Notifications</a>
  </div>

  <!-- Account Tab Content -->
  <div id="content-account">
    <div id="account-loading" class="flex justify-center py-8">
      <span class="loading loading-spinner loading-lg"></span>
    </div>
    <div id="account-content" class="hidden space-y-6 max-w-2xl">

      <!-- User Profile Card -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="font-semibold text-base mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Your Profile
          </h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Email</p>
              <p class="font-medium mt-0.5" id="account-email">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Role</p>
              <p class="mt-0.5" id="account-role">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">User ID</p>
              <p class="font-mono text-xs mt-0.5 truncate" id="account-user-id">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Last Sign In</p>
              <p class="text-sm mt-0.5" id="account-last-signin">--</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Company Card -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="font-semibold text-base mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Company
          </h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Company Name</p>
              <p class="font-medium mt-0.5" id="account-company-name">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Country</p>
              <p class="mt-0.5" id="account-country">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Currency</p>
              <p class="mt-0.5" id="account-currency">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Timezone</p>
              <p class="mt-0.5" id="account-timezone">--</p>
            </div>
            <div>
              <p class="text-xs text-base-content/50 uppercase tracking-wide font-medium">Customer ID</p>
              <p class="font-mono text-xs mt-0.5 truncate" id="account-customer-id">--</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Connected Email Card -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="font-semibold text-base mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email Inbox Connection
          </h3>
          <div id="email-connected" class="hidden">
            <div class="flex items-center justify-between p-3 bg-success/10 rounded-lg">
              <div class="flex items-center gap-3">
                <span class="badge badge-success badge-sm">Connected</span>
                <span class="font-medium" id="account-email-address">--</span>
              </div>
              <a href="/onboarding?step=connect_email" class="btn btn-ghost btn-xs">Change</a>
            </div>
            <p class="text-xs opacity-50 mt-2">Invoices sent to this email are automatically processed.</p>
          </div>
          <div id="email-not-connected" class="hidden">
            <div class="flex items-center gap-3 p-3 bg-warning/10 rounded-lg">
              <span class="badge badge-warning badge-sm">Not Connected</span>
              <span class="text-sm">No email inbox connected</span>
            </div>
            <p class="text-xs opacity-50 mt-2">Connect your Gmail in <a href="/onboarding?step=connect_email" class="link">onboarding</a> to start receiving invoices.</p>
          </div>
        </div>
      </div>

      <!-- Connected Accounting Card -->
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="font-semibold text-base mb-4 flex items-center gap-2">
            <img src="/images/logos/quickbooks.svg" alt="" class="h-5 w-5" />
            Accounting Connection
          </h3>
          <div id="accounting-connected" class="hidden">
            <div class="flex items-center gap-3 p-3 bg-success/10 rounded-lg">
              <span class="badge badge-success badge-sm">Connected</span>
              <div>
                <span class="font-medium" id="account-accounting-provider">--</span>
                <span class="text-sm opacity-60 ml-1" id="account-accounting-company">--</span>
              </div>
            </div>
            <p class="text-xs opacity-50 mt-2">Approved invoices are synced to this accounting system.</p>
          </div>
          <div id="accounting-not-connected" class="hidden">
            <div class="flex items-center gap-3 p-3 bg-warning/10 rounded-lg">
              <span class="badge badge-warning badge-sm">Not Connected</span>
              <span class="text-sm">No accounting system connected</span>
            </div>
            <p class="text-xs opacity-50 mt-2">Connect QuickBooks in <a href="/onboarding?step=connect_accounting" class="link">onboarding</a> to auto-sync invoices.</p>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Approval Rules Tab Content -->
  <div id="content-approvals" class="hidden">
    <!-- Add Rule Button -->
    <div class="flex justify-end mb-4">
      <button id="btn-add-rule" class="btn btn-primary btn-sm">+ Add Approval Rule</button>
    </div>

    <!-- Rules List -->
    <div id="rules-loading" class="flex justify-center py-8">
      <span class="loading loading-spinner loading-lg"></span>
    </div>
    <div id="rules-empty" class="hidden text-center py-12 opacity-50">
      <p class="text-lg font-semibold">No approval rules configured</p>
      <p class="text-sm mt-1">Add rules to require multiple approvals for invoices above certain amounts.</p>
    </div>
    <div id="rules-list" class="hidden space-y-3"></div>
  </div>

  <!-- Team Members Tab Content (admin-only) -->
  <div id="content-team" class="hidden admin-only">
    <!-- Invite Button -->
    <div class="flex justify-end mb-4">
      <button id="btn-invite-member" class="btn btn-primary btn-sm">+ Invite Team Member</button>
    </div>

    <!-- Loading -->
    <div id="team-loading" class="flex justify-center py-8">
      <span class="loading loading-spinner loading-lg"></span>
    </div>

    <!-- Empty State -->
    <div id="team-empty" class="hidden text-center py-12 opacity-50">
      <p class="text-lg font-semibold">No team members yet</p>
      <p class="text-sm mt-1">Invite team members to give them access to the platform.</p>
    </div>

    <!-- Members Table -->
    <div id="team-table-container" class="hidden">
      <div class="overflow-x-auto">
        <table class="table table-sm">
          <thead>
            <tr class="border-b border-base-200">
              <th class="text-xs uppercase tracking-wide opacity-60 font-semibold">Email</th>
              <th class="text-xs uppercase tracking-wide opacity-60 font-semibold">Role</th>
              <th class="text-xs uppercase tracking-wide opacity-60 font-semibold hidden sm:table-cell">Joined</th>
              <th class="text-xs uppercase tracking-wide opacity-60 font-semibold hidden md:table-cell">Last Active</th>
              <th class="text-xs uppercase tracking-wide opacity-60 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody id="team-table-body"></tbody>
        </table>
      </div>
    </div>

    <!-- Team feedback toast -->
    <div id="team-feedback" class="hidden mt-4 text-sm"></div>
  </div>

  <!-- Invite Member Modal -->
  <dialog id="invite-modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Invite Team Member</h3>
      <div class="form-control mt-4">
        <label class="label"><span class="label-text">Email Address</span></label>
        <input id="invite-email" type="email" class="input input-bordered" placeholder="colleague@company.com" />
      </div>
      <div class="form-control mt-3">
        <label class="label"><span class="label-text">Role</span></label>
        <select id="invite-role" class="select select-bordered">
          <option value="viewer">Viewer (read-only access)</option>
          <option value="admin">Admin (full access)</option>
        </select>
      </div>
      <p class="text-xs opacity-50 mt-3">An invitation email will be sent. The user must click the link to set their password and activate their account.</p>
      <div id="invite-error" class="hidden mt-3 text-sm text-error"></div>
      <div class="modal-action">
        <button id="invite-cancel" class="btn btn-ghost">Cancel</button>
        <button id="invite-send" class="btn btn-primary">Send Invite</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>

  <!-- Remove Member Confirmation Modal -->
  <dialog id="remove-member-modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Remove Team Member</h3>
      <p class="py-4">Are you sure you want to remove <strong id="remove-member-email"></strong> from your team? They will lose all access.</p>
      <div class="modal-action">
        <button id="remove-cancel" class="btn btn-ghost">Cancel</button>
        <button id="remove-confirm" class="btn btn-error">Remove</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>

  <!-- Notifications Tab Content -->
  <div id="content-notifications" class="hidden">
    <div id="notif-loading" class="flex justify-center py-8">
      <span class="loading loading-spinner loading-lg"></span>
    </div>
    <div id="notif-form-wrapper" class="hidden max-w-xl">
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body">
          <h3 class="font-semibold text-base mb-4">Notification Channels</h3>

          <div class="form-control mb-4">
            <label class="label cursor-pointer justify-start gap-3">
              <input type="checkbox" id="notif-email" class="toggle toggle-primary" />
              <div>
                <span class="label-text font-medium">Email Notifications</span>
                <p class="text-xs opacity-50">Get notified when new invoices are processed</p>
              </div>
            </label>
          </div>

          <div class="form-control mb-2">
            <label class="label cursor-pointer justify-start gap-3">
              <input type="checkbox" id="notif-slack" class="toggle toggle-primary" />
              <div>
                <span class="label-text font-medium">Slack Notifications</span>
                <p class="text-xs opacity-50">Send invoice alerts to a Slack channel</p>
              </div>
            </label>
          </div>

          <div id="notif-slack-config" class="ml-12 mb-4 hidden">
            <div class="form-control w-full">
              <label class="label" for="notif-slack-url">
                <span class="label-text text-sm">Webhook URL</span>
              </label>
              <input id="notif-slack-url" type="url"
                placeholder="https://hooks.slack.com/services/..."
                class="input input-bordered input-sm w-full" />
              <label class="label">
                <span class="label-text-alt opacity-50">
                  In your Slack app &rarr; <strong>Incoming Webhooks</strong> &rarr; <strong>Add New Webhook to Workspace</strong>, pick a channel, copy the URL.
                </span>
              </label>
            </div>
            <button id="notif-test-slack" class="btn btn-outline btn-sm mt-2">
              <span id="notif-test-text">Send Test Message</span>
              <span id="notif-test-loading" class="loading loading-spinner loading-xs hidden"></span>
            </button>
            <span id="notif-test-result" class="text-sm ml-2 hidden"></span>
          </div>

          <div class="divider text-xs opacity-50">Auto-Approve</div>

          <div class="form-control w-full mb-4">
            <label class="label" for="notif-auto-approve">
              <span class="label-text font-medium">Auto-Approve Threshold</span>
            </label>
            <label class="input-group">
              <span>$</span>
              <input id="notif-auto-approve" type="number" step="0.01" min="0" value="0"
                class="input input-bordered input-sm w-full" />
            </label>
            <label class="label">
              <span class="label-text-alt opacity-50">Invoices under this amount auto-approve. 0 = disabled.</span>
            </label>
          </div>

          <div class="flex justify-end gap-2">
            <button id="notif-save" class="btn btn-primary btn-sm">
              <span id="notif-save-text">Save Preferences</span>
              <span id="notif-save-loading" class="loading loading-spinner loading-xs hidden"></span>
            </button>
          </div>
          <div id="notif-save-result" class="text-sm mt-2 hidden"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add/Edit Rule Modal -->
  <dialog id="rule-modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg" id="rule-modal-title">Add Approval Rule</h3>
      <div class="form-control mt-4">
        <label class="label"><span class="label-text">Rule Name</span></label>
        <input id="rule-name" type="text" class="input input-bordered" placeholder="e.g., High-value invoices" />
      </div>
      <div class="grid grid-cols-2 gap-4 mt-3">
        <div class="form-control">
          <label class="label"><span class="label-text">Min Amount ($)</span></label>
          <input id="rule-min" type="number" class="input input-bordered" placeholder="0" />
        </div>
        <div class="form-control">
          <label class="label"><span class="label-text">Max Amount ($)</span></label>
          <input id="rule-max" type="number" class="input input-bordered" placeholder="No limit" />
        </div>
      </div>
      <div class="form-control mt-3">
        <label class="label"><span class="label-text">Required Approvals</span></label>
        <input id="rule-approvers-count" type="number" class="input input-bordered" min="1" max="5" value="1" />
      </div>
      <div class="form-control mt-3">
        <label class="label"><span class="label-text">Approver Emails (comma-separated)</span></label>
        <input id="rule-approver-emails" type="text" class="input input-bordered" placeholder="cfo@company.com, finance@company.com" />
      </div>
      <div class="modal-action">
        <button id="rule-cancel" class="btn btn-ghost">Cancel</button>
        <button id="rule-save" class="btn btn-primary">Save Rule</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>

  <!-- Delete Confirmation Modal -->
  <dialog id="delete-modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Delete Approval Rule</h3>
      <p class="py-4">Are you sure you want to delete this rule? This action cannot be undone.</p>
      <div class="modal-action">
        <button id="delete-cancel" class="btn btn-ghost">Cancel</button>
        <button id="delete-confirm" class="btn btn-error">Delete</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>
</DashboardLayout>

<script>
  import { supabase, FUNCTIONS_URL } from '../lib/supabase';

  // ─── Types ──────────────────────────────────────────────────────
  interface ApprovalRule {
    id: string;
    name: string;
    min_amount: number | null;
    max_amount: number | null;
    required_approvals: number;
    approver_emails: string[];
    is_active: boolean;
    created_at: string;
    updated_at: string | null;
  }

  // ─── State ──────────────────────────────────────────────────────
  let rules: ApprovalRule[] = [];
  let editingRuleId: string | null = null;
  let deletingRuleId: string | null = null;

  // ─── DOM References ─────────────────────────────────────────────
  const tabAccount = document.getElementById('tab-account')!;
  const tabApprovals = document.getElementById('tab-approvals')!;
  const tabTeam = document.getElementById('tab-team')!;
  const tabNotifications = document.getElementById('tab-notifications')!;

  const contentAccount = document.getElementById('content-account')!;
  const contentApprovals = document.getElementById('content-approvals')!;
  const contentTeam = document.getElementById('content-team')!;
  const contentNotifications = document.getElementById('content-notifications')!;

  const rulesLoading = document.getElementById('rules-loading')!;
  const rulesEmpty = document.getElementById('rules-empty')!;
  const rulesList = document.getElementById('rules-list')!;

  const btnAddRule = document.getElementById('btn-add-rule')!;
  const ruleModal = document.getElementById('rule-modal') as HTMLDialogElement;
  const ruleModalTitle = document.getElementById('rule-modal-title')!;
  const ruleNameInput = document.getElementById('rule-name') as HTMLInputElement;
  const ruleMinInput = document.getElementById('rule-min') as HTMLInputElement;
  const ruleMaxInput = document.getElementById('rule-max') as HTMLInputElement;
  const ruleApproversCountInput = document.getElementById('rule-approvers-count') as HTMLInputElement;
  const ruleApproverEmailsInput = document.getElementById('rule-approver-emails') as HTMLInputElement;
  const ruleCancelBtn = document.getElementById('rule-cancel')!;
  const ruleSaveBtn = document.getElementById('rule-save')!;

  const deleteModal = document.getElementById('delete-modal') as HTMLDialogElement;
  const deleteCancelBtn = document.getElementById('delete-cancel')!;
  const deleteConfirmBtn = document.getElementById('delete-confirm')!;

  // ─── Tabs ───────────────────────────────────────────────────────
  const tabs = [tabAccount, tabApprovals, tabTeam, tabNotifications];
  const contents = [contentAccount, contentApprovals, contentTeam, contentNotifications];

  tabs.forEach((tab, index) => {
    tab.addEventListener('click', () => {
      tabs.forEach(t => t.classList.remove('tab-active'));
      contents.forEach(c => c.classList.add('hidden'));
      tab.classList.add('tab-active');
      contents[index].classList.remove('hidden');
    });
  });

  // ─── Auth ───────────────────────────────────────────────────────
  async function getAuthToken(): Promise<string | null> {
    const { data: { session } } = await supabase.auth.getSession();
    return session?.access_token ?? null;
  }

  // ─── Formatters ─────────────────────────────────────────────────
  const currencyFormatter = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  });

  function formatAmount(amount: number | null): string {
    if (amount === null || amount === undefined) return 'Any';
    return currencyFormatter.format(amount);
  }

  function escapeHtml(str: string): string {
    const div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  // ─── Fetch Rules ────────────────────────────────────────────────
  async function fetchRules(): Promise<void> {
    rulesLoading.classList.remove('hidden');
    rulesEmpty.classList.add('hidden');
    rulesList.classList.add('hidden');

    try {
      const token = await getAuthToken();
      if (!token) {
        window.location.href = '/login';
        return;
      }

      const res = await fetch(`${FUNCTIONS_URL}/admin-approval-rules`, {
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
      });

      if (!res.ok) {
        // If the endpoint is not deployed yet, show empty state gracefully
        console.warn('Approval rules endpoint returned', res.status);
        rules = [];
      } else {
        const data = await res.json();
        rules = data.rules || data || [];
        if (!Array.isArray(rules)) rules = [];
      }
    } catch (err) {
      // Handle network errors gracefully (endpoint may not be deployed)
      console.warn('Could not fetch approval rules:', err);
      rules = [];
    }

    renderRules();
  }

  // ─── Render Rules ───────────────────────────────────────────────
  function renderRules(): void {
    rulesLoading.classList.add('hidden');

    if (rules.length === 0) {
      rulesEmpty.classList.remove('hidden');
      rulesList.classList.add('hidden');
      return;
    }

    rulesEmpty.classList.add('hidden');
    rulesList.classList.remove('hidden');

    rulesList.innerHTML = rules.map(rule => {
      const minDisplay = rule.min_amount !== null ? formatAmount(rule.min_amount) : '$0';
      const maxDisplay = rule.max_amount !== null ? formatAmount(rule.max_amount) : 'No limit';
      const emailsDisplay = (rule.approver_emails || []).map(e => escapeHtml(e)).join(', ') || 'None specified';
      const activeClass = rule.is_active ? 'toggle-success' : '';
      const activeLabel = rule.is_active ? 'Active' : 'Inactive';

      return `
        <div class="card bg-base-100 shadow-sm" data-rule-id="${rule.id}">
          <div class="card-body p-4">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
              <div class="flex-1">
                <h3 class="font-semibold text-base">${escapeHtml(rule.name)}</h3>
                <div class="flex flex-wrap gap-x-4 gap-y-1 mt-2 text-sm opacity-70">
                  <span>Amount: ${minDisplay} - ${maxDisplay}</span>
                  <span>Required approvals: ${rule.required_approvals}</span>
                </div>
                <div class="mt-1 text-sm opacity-50">
                  Approvers: ${emailsDisplay}
                </div>
              </div>
              <div class="flex items-center gap-3">
                <label class="flex items-center gap-2 cursor-pointer">
                  <span class="text-xs opacity-60">${activeLabel}</span>
                  <input type="checkbox" class="toggle toggle-sm ${activeClass}" data-toggle-rule="${rule.id}" ${rule.is_active ? 'checked' : ''} />
                </label>
